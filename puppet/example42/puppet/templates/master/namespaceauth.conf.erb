        allow *.<%= domain %>
        allow <%= local_network %>

[puppetrunner]
        allow <%= puppet_server %>

[puppetbucket]
        allow *.<%= domain %>
        allow <%= local_network %>

[puppetreports]
        allow *.<%= domain %>
        allow <%= local_network %>

